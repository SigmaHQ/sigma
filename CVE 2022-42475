date: 2024/02/07
tags:
    - attack.initial_access
    - detection.emerging_threats
logsource:
    product: FortiOS
    service: syslog
   
detection:
    keyword_event:
        - 'Logdesc="Application crashed" and msg="[...] application: sslvpnd,[...], Signal 11 received, Backtrace: [...]â€œ'

    keyword_file:
        - 'libips.bak'
        - 'libgif.so'
        - 'libiptcp.so'
        - 'libipudp.so'
        - 'libjepg.so'
        - '.sslvpnconfigbk'
        - 'wxd.conf'

    condition: keyword_event or keyword_file

falsepositives:
    - unknown
level: high
